<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.yishui.common</groupId>
	<artifactId>tool</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>tool</name>
	<url>http://maven.apache.org</url>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.0.3.RELEASE</version>
	</parent>
	<properties>
		<fastjson.version>1.2.47</fastjson.version>
		<spring-social.version>1.1.6.RELEASE</spring-social.version>
		<commons-collections.version>3.2.1</commons-collections.version>
		<lettuce.version>5.0.2.RELEASE</lettuce.version>
		<commons-lang3.version>3.4</commons-lang3.version>
		<camel-core.version>2.21.0</camel-core.version>
		<logback-redis-appender.version>1.1.5</logback-redis-appender.version>
		<spring-social-version>1.1.4.RELEASE</spring-social-version>
		<spring-security-oauth2.version>2.0.2.RELEASE</spring-security-oauth2.version>
		<commons-collections.version>3.2.2</commons-collections.version>
		<camel-core.version>2.21.0</camel-core.version>
		<mybatis.version>1.3.2</mybatis.version>
		<pagehelper.version>1.2.5</pagehelper.version>
		<druid.version>1.1.10</druid.version>
		<!-- <swagger2.version>2.2.2</swagger2.version> -->
		<swagger2.version>2.9.2</swagger2.version>
		<swagger-bootstrap-ui.version>1.8.7</swagger-bootstrap-ui.version>
		<hibernate-validator.version>6.0.9.Final</hibernate-validator.version>
		<poi.version>3.15</poi.version>
		<tk.mybatis.version>2.0.3</tk.mybatis.version>
		<lombok.version>1.18.2</lombok.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
		</dependency>
		<dependency>
			<groupId>org.hibernate.validator</groupId>
			<artifactId>hibernate-validator</artifactId>
		</dependency>
		<!-- swagger2 -->
		<dependency>
			<groupId>io.springfox</groupId>
			<artifactId>springfox-swagger2</artifactId>
			<version>${swagger2.version}</version>
		</dependency>
		<dependency>
			<groupId>io.springfox</groupId>
			<artifactId>springfox-swagger-ui</artifactId>
			<version>${swagger2.version}</version>
		</dependency>
		<!-- swagger2 -->
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<scope>provided</scope>
		</dependency>

	</dependencies>
	<build>
		<finalName>yishui-common</finalName>
		<plugins>
			<!-- 打包时跳过测试 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skipTests>true</skipTests>
					<useSystemClassLoader>false</useSystemClassLoader>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
